// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // Store account-specific profile info
  email             String?
  name              String?
  picture           String?

  // Gmail watch state for push notifications
  historyId         String?  // Track which emails we've already processed
  watchExpiration   DateTime? // When the Gmail watch expires

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id               String            @id @default(cuid())
  name             String?
  email            String?           @unique
  emailVerified    DateTime?
  image            String?
  accounts         Account[]
  sessions         Session[]
  emails           Email[]
  categories       Category[]
  unsubscribeJobs  UnsubscribeJob[]

  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Email management models
model Email {
  id                String              @id @default(cuid())
  userId            String
  gmailId           String              @unique
  threadId          String
  subject           String?
  from              String
  to                String[]
  snippet           String?
  summary           String?             @db.Text // AI-generated summary
  labelIds          String[]
  receivedAt        DateTime
  categoryId        String?
  unsubscribeUrl    String?             @db.Text // List-Unsubscribe header URL
  unsubscribeStatus UnsubscribeStatus?  // User feedback on unsubscribe success

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  category        Category?         @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  unsubscribeJobs UnsubscribeJob[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([gmailId])
  @@index([receivedAt])
  @@index([categoryId])
}

enum UnsubscribeStatus {
  ATTEMPTED  // Yellow - unsubscribe was attempted
  SUCCEEDED  // Green - user confirmed it worked
  FAILED     // Red - user confirmed it didn't work
}

model Category {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String   @db.Text
  color       String?  // Hex color for UI display

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  emails      Email[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model UnsubscribeJob {
  id          String    @id @default(cuid())
  emailId     String
  userId      String
  status      JobStatus @default(PENDING)
  priority    Int       @default(0)
  attempts    Int       @default(0)
  maxAttempts Int       @default(3)

  // Results
  result      Json?     // Store unsubscribe result details
  error       String?   @db.Text

  // Timing
  createdAt    DateTime  @default(now())
  startedAt    DateTime?
  completedAt  DateTime?
  scheduledFor DateTime  @default(now()) // For retry delays

  email       Email     @relation(fields: [emailId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status, scheduledFor])
  @@index([userId])
  @@index([emailId])
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  NEEDS_CONFIRMATION
  CANCELLED
}
