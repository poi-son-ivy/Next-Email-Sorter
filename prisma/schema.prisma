// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // Store account-specific profile info
  email             String?
  name              String?
  picture           String?

  // Gmail watch state for push notifications
  historyId         String?  // Track which emails we've already processed
  watchExpiration   DateTime? // When the Gmail watch expires

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  emails        Email[]
  categories    Category[]

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Email management models
model Email {
  id             String   @id @default(cuid())
  userId         String
  gmailId        String   @unique
  threadId       String
  subject        String?
  from           String
  to             String[]
  snippet        String?
  summary        String?  @db.Text // AI-generated summary
  labelIds       String[]
  receivedAt     DateTime
  categoryId     String?
  unsubscribeUrl String?  @db.Text // List-Unsubscribe header URL

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([gmailId])
  @@index([receivedAt])
  @@index([categoryId])
}

model Category {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String   @db.Text
  color       String?  // Hex color for UI display

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  emails      Email[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}
