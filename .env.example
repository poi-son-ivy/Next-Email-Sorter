# NextAuth Configuration
AUTH_SECRET=generate-a-random-secret-here  # Run: openssl rand -base64 32

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# NextAuth URL
NEXTAUTH_URL=http://localhost:3000

# Database Configuration (Neon PostgreSQL)
# Pooled connection string (for Prisma queries)
DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/dbname?sslmode=require&channel_binding=require

# Direct connection string (for migrations)
DIRECT_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/dbname?sslmode=require&channel_binding=require

# Pusher Configuration (for real-time updates)
# Get these from: https://dashboard.pusher.com/
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=your-pusher-cluster
NEXT_PUBLIC_PUSHER_KEY=your-pusher-key
NEXT_PUBLIC_PUSHER_CLUSTER=your-pusher-cluster

# Gmail Pub/Sub Configuration
# Get this from: https://console.cloud.google.com/cloudpubsub
GMAIL_PUBSUB_TOPIC=projects/your-project-id/topics/gmail-notifications

# AI Configuration
# Anthropic API Key (Primary AI provider)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# OpenAI API Key (Fallback AI provider)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Inngest Configuration (Background Job Orchestration)
# Get from: https://www.inngest.com/ → Settings → Keys
# Free tier: 50,000 runs/month (no credit card required)
INNGEST_EVENT_KEY=test_your-event-key  # Use prod_ prefix in production
INNGEST_SIGNING_KEY=signkey-test-your-signing-key  # Use signkey-prod- prefix in production

# Worker Configuration (Render.com Background Worker)
# Worker processes Puppeteer jobs with no timeout limits
# Generate a secure random string for WORKER_API_KEY: openssl rand -base64 32
WORKER_URL=http://localhost:3001  # Use https://your-worker.onrender.com in production
WORKER_API_KEY=change-me-to-something-secure  # MUST match in both Vercel and Render!